<div class="row flex-lg-row-reverse align-items-center g-5 py-4 mb-4">
  <!-- Banner Img -->
  <div class="col-12 col-lg-6">
    <img src="/img/hero.gif" alt="hero" width="607" height="510" class="d-block mx-lg-auto img-fluid" loading="lazy" />
  </div>

  <!-- Text -->
  <div class="col-12 col-lg-6">
    <h1 class="display-5 fw-bold mb-3">Lorem ipsum dolor sit amet.</h1>
    <p class="lead">
      Lorem ipsum dolor sit amet consectetur adipisicing elit. Adipisci eos at velit facilis et corporis saepe illo debitis maiores magnam?
    </p>

    <!-- Button -->
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
      <a href="/latest" class="btn btn-primary btn-dark btn-lg px-4 me-md-2">Show Latest</a>
      <a href="/random" class="btn btn-outline-secondary btn-lg px-4 me-md-2">Random</a>
    </div>
  </div>
</div>

<!-- Categories -->
<div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4">
  <!-- Categories Lsit -->
  <% if(categories != "") { %> <% categories.forEach((category, index) => { %>
  <a href="/categories/<%- category.name %>" class="col text-center category__link">
    <div class="category__img shadow">
      <img src="img/<%- category.image %>" alt="<%- category.name %>" loading="lazy" />
    </div>
    <div class="pt-1"><%- category.name %></div>
  </a>
  <% }) %> <% } else { %>
  <p>No items found.</p>
  <% } %>

  <a href="/categories" class="col text-center category__link">
    <div class="category__img shadow">
      <img src="img/dot.gif" alt="img" loading="lazy" />
    </div>
    <div class="pt-1">View all Categories</div>
  </a>
</div>

<!-- latest -->
<!-- Latest Header -->
<section class="pb-4 pt-4">
  <div class="d-flex mb-2 align-items center">
    <h2>Latest</h2>
    <a href="/latest" class="ms-auto">View More</a>
  </div>

  <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
    <% if(info.letest != "") { %> <% info.latest.forEach((info, index) => { %>
    <a href="/info/<%= info.id %>" class="col text-center category__link">
      <div class="category__img category__img--large shadow">
        <img src="uploads/<%= info.image %> " alt="<%= info.name %>" loading="lazy" />
      </div>
      <div class="pt-1"><%= info.name %></div>
    </a>
    <% }) %> <% } else { %>
    <p>No items found.</p>
    <% } %>
  </div>
</section>

